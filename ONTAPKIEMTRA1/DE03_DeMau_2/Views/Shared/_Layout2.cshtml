    <style>
        body {
            background-color: #3f3f3f;
            font-family: Arial, Helvetica, sans-serif;
            color: #2d2d2d;
        }

        p {
            line-height: 1.5em;
        }

        .container {
            width: 50%;
            margin: 20px auto;
            background: #ebeef0;
            border: 15px solid white;
        }

        header {
            margin: 0;
            width: 100%;
            height: 90px;
            background: #2450b6;
            color: rgb(238, 239, 254);
        }

            header h1 {
                text-align: center;
                line-height: 90px;
                letter-spacing: 5px;
                margin: 0;
                /* mặc định h1 có các lề */
            }

        .content {
            width: 100%;
            box-sizing: border-box;
            padding: 15px;
            float: left;
            min-height: 500px;
        }

            .content .title {
                color: #2450b6;
                padding: 5px;
                font-size: large;
                font-weight: bold;
            }

        nav {
            width: 100%;
            height: 30px;
            box-sizing: border-box;
            background: #446fd2;
        }

            nav ul {
                text-align: left;
                margin-top: 1px;
            }

                nav ul li {
                    padding: 5px 20px;
                    display: inline-block;
                    border-left: 1px solid white;
                }

                    nav ul li a {
                        color: rgb(243, 243, 248);
                        text-decoration: none;
                    }

                        nav ul li a:hover {
                            font-weight: bold;
                            color: rgb(216, 238, 155);
                        }

        ul, li {
            list-style-type: none;
        }
        ul{
            /*margin: 0;*/
            padding: 0;
        }
        a{
            text-decoration:none;
        }
        .content{
            display:block;
        }

