@model DE03_DeMau.Models.CourseStudent

@{ 
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    th, td{
        width: 100px;
    }
</style>
<h2>Display Course Student</h2>
<hr />
<div>
    <h3>Course information</h3>
    <label>Cource ID: <span>@Model.course.MaKH</span></label>  <br />
    <label>Cource Name: <span>@Model.course.MaKH</span></label> <br />
</div>
<br />
<div>
    <h3>List of students</h3>
    <table border="1">
        <thead>
            <tr>
                <th>Mã SV</th>
                <th>Tên SV</th>
                <th>Tuổi</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.students)
            {
                <tr>
                    <td>@item.MaSV</td>
                    <td>@item.TenSV</td>
                    <td>@item.Tuoi</td>
                    <td>@item.DiaChi</td>
                </tr>
            }
        </tbody>
    </table>
</div>
