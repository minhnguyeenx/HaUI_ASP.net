@model IEnumerable<TH8_LamLai.Models.tblEmployee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "tblEmployees", FormMethod.Get))
{
    <div>
        <label for="searchName">Tìm tên</label>
        <input type="text" name="searchName" class="form-control" />
    </div>
    <button type="submit">Tìm kiếm</button>
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblDept.deptname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.addr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tblDept.deptname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.addr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salary)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.image)*@
                @{
                    var path = "~/Images/" + item.image;
                    <img src="@Url.Content(path)" width="150px" />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.eid }) |
                @Html.ActionLink("Details", "Details", new { id = item.eid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.eid })
            </td>
        </tr>
    }

</table>
